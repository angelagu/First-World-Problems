<h1>Listing first_world_problems</h1>

<table>
  <thead>
    <tr>
      <th>Problem</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @first_world_problems.each do |first_world_problem| %>
      <tr>
        <td><%= first_world_problem.problem %></td>
        <td><%= link_to 'Show', first_world_problem %></td>
        <td><%= link_to 'Edit', edit_first_world_problem_path(first_world_problem) %></td>
        <td><%= link_to 'Destroy', first_world_problem, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New First world problem', new_first_world_problem_path %>
